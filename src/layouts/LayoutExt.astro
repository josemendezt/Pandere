---
import '@/styles/global.css'
import { ViewTransitions } from 'astro:transitions'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pandere Login Page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions handleForms />
  </head>
  <body>
    <div
      class="spinner-container fixed inset-0 flex hidden items-center justify-center bg-white bg-opacity-70 backdrop-blur-md"
      id="spinner-container"
    >
      <div
        class="spinner z-10 h-12 w-12 animate-spin rounded-full border-4 border-t-4 border-solid border-gray-200"
      >
      </div>
    </div>
    <main>
      <slot />
    </main>
  </body>
</html>
