---
import Icon from '@/components/utils/Icon.astro'
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
  Input,
  Button,
  Label,
  Separator,
} from '@/components/ui'
import LayoutExt from '@/layouts/LayoutExt.astro'
---

<LayoutExt title="Login to Pandere">
  <section class="flex h-screen items-center justify-center">
    <Card className="mx-auto max-h-full w-80">
      <CardHeader>
        <div class="mx-auto w-24 max-w-full"><Icon icon="PandereLogo" /></div>
      </CardHeader>
      <CardContent>
        <div class="grid max-h-full w-full max-w-sm items-center gap-1.5">
          <Label htmlFor="email">Email</Label>
          <Input type="email" id="email" placeholder="email" />
        </div>
        <div class="mt-4 grid w-full max-w-sm items-center gap-1.5">
          <Label htmlFor="password">Password</Label>
          <Input
            type="password"
            autoComplete="on"
            id="password"
            placeholder="password"
          />
          <a class="mx-auto underline" href="/forgotPassword"
            >Forgot your password?</a
          >
        </div>
      </CardContent>
      <CardFooter>
        <div class="mx-auto w-full max-w-sm">
          <a href="/">
            <Button className="mx-auto w-full max-w-sm" type="submit">
              Login
            </Button>
          </a>
          <div class="mt-2 flex">
            <Separator className="my-4 w-2/5" />
            <span class="px-4 pt-1">Or</span>
            <Separator className="my-4 w-2/5" />
          </div>
          <Button
            type="button"
            variant="outline"
            className="mx-auto mt-1 w-full max-w-sm"
          >
            Sign Up
          </Button>
        </div>
      </CardFooter>
    </Card>
  </section>
</LayoutExt>
